#!/bin/sh

~nico/bin/backup-marker

start=$(date)
rsync -av --delete --progress 	\
	--exclude '/proc/*' 	\
	--exclude '/tmp/*' 	\
	--exclude '/sys/*' 	\
	--exclude '/dev/*' 	\
	--exclude '/home/users/nico/.bitcoin/blocks/' 	\
	--exclude '/home/users/nico/.bitcoin/chainstate/' 	\
	"$@" 			\
	/ root@zuhause.schottelius.org:/home/services/backup/bento-manuell
end=$(date)

echo $start
echo $end
