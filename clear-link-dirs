
check_file()
{
   if [ ! -h "$1" ]; then
      echo "$1" is not a link\! Please FIXME\!
      if [ ! -e "$1" ]; then
         echo "$1" is broken. removing.
         #rm "$1"
      fi
   fi
}

for a in /usr/bin/* ; do
   check_file "$a"
done

for a in /usr/lib/* ; do
   check_file "$a"
done

for a in /usr/sbin/*; do
   check_file "$a"
done

for a in /usr/include/*; do
   check_file "$a"
done


