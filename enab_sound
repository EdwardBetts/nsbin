modprobe sound
#modprobe snd-ali5451
#modprobe snd-pcm-oss
chmod a+rw /dev/sound/*
ln -s /dev/sound/dsp /dev/dsp
ln -s /dev/sound/mixer /dev/mixer
ln -s /dev/sound/mixer1 /dev/mixer1
/usr/media/bin/aumix -L

case "$1" in 

	stop)
		rmmod sound
		rmmod trident
		rmmod soundcore
		rmmod ac97_codec
	;;
esac
