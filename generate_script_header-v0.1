TEMPLATE=~/.script-template

if [ $# -lt 1 ]; then
   echo "`basename $0`: new script file(s)"
   exit 1
fi


_i=1
while [ "$_i" -le "$#" ]; do
   eval _file=\$$_i
   echo $_file
   if [ -e "$_file" ]; then
      echo "$_file exists. Will not overwrite it. Or will I ?"
   else
      if [ ! -e "$TEMPLATE" ]; then
         echo "Required Template missing. Aborting."
         exit 1
      else
         . $TEMPLATE
         cat << EOF > "$_file"
#!/bin/sh
#
# $author <$email>
# Date: `date +%d-%h-%Y`
# Last Modified: -
#
EOF
      fi
   fi
   _i=$[$_i+1]
done
